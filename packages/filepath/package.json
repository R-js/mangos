{
  "name": "@mangos/filepath",
  "version": "1.0.0",
  "description": "filepath parses UNC (long and short and cmd aliases) local filesystem path, and unix paths, checks for invalid path characters",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bugs": {
      "url": "https://github.com/R-js/mangos.git",
      "email": "jkfbogers@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/R-js/mangos.git",
    "directory": "packages/filepath"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "package.json",
    "LICENSE.txt"
  ],
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "bun build src/index.ts --outfile dist/index.js",
    "prepublishOnly": "npm run build",
    "lint": "biome check --apply src",
    "test": "vitest run --coverage ./test/success.spec.ts ./test/errors.spec.ts"
  },
  "homepage": "https://github.com/R-js/mangos/blob/master/packages/filepath/README.md",
  "keywords": [
    "file",
    "path",
    "unc",
    "dos",
    "linux",
    "device path",
    "universal naming convention",
    "file system",
    "lfs"
  ],
  "author": "jacob bogers <jkfbogers@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=v20.8.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "typescript": "^5.9.3"
  }
}
